<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ApiCallingDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ApiCallingDemo" parent="Base.Theme.ApiCallingDemo" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ActionBar background -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>

        <!-- Status bar icon colors (light text/icons when false, dark when true) -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize the ActionBar text color -->
        <item name="actionBarStyle">@style/WhiteActionBar</item>
    </style>

    <!-- Define custom ActionBar style -->
    <style name="WhiteActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item> <!-- Background color -->
        <item name="titleTextStyle">@style/ActionBarTitleText</item> <!-- Title text color -->
    </style>

    <!-- Define custom title text style -->
    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item> <!-- Title text color -->
    </style>

</resources>